#include <iostream>
using namespace std;
int main()
{
    int ruchi[2][2],rani[2][2],c[2][2];
    cout<<"enter first matrix"<<endl;
    for(int i=0;i<=1;++i)
    {
        for(int j=0;j<=1;++j)
        {
            cout<<"Enter element A["<<i<<"]"<<"["<<j<<"]";
            cin>>ruchi[i][j];
        }
        
    }
cout<<"enter second matrix"<<endl;
    for(int i=0;i<=1;++i)
    {
        for(int j=0;j<=1;++j)
        {
            cout<<"Enter element A["<<i<<"]"<<"["<<j<<"]";
            cin>>rani[i][j];
        }
    }
    for(int i=0;i<=1;++i)
    {
        for(int j=0;j<=1;++j)
        {
           c[i][j]=ruchi[i][j]+rani[i][j];
           cout<<c[i][j]<<" ";
        }
        cout<<endl;
    }
    
}
